{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "block-no-empty": null,
        "no-empty-source": null,
        "selector-class-pattern": null,
        "rule-empty-line-before": [
            "always",
            {
                "except": [
                    "first-nested"
                ],
                "ignore": [
                    "after-comment"
                ]
            }
        ]
    }
}